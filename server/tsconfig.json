{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "outDir": "./dist",
        "removeComments": true,
        "noImplicitUseStrict": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "sourceMap": true
    },
    "include": [ // 指定ts编译的文件目录，默认是全部都编译
        "src/**/*.ts",
        "src/*.ts"
    ]
}